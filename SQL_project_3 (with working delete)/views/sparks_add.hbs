<h2>Add New Spark</h2>

<form action="/sparks/add" method="POST">
  <label for="spark_name">Spark Name:</label><br>
  <input type="text" id="spark_name" name="spark_name" required><br><br>

  <label for="stat_boosted">Stat Boosted:</label><br>
  <select id="stat_boosted" name="stat_boosted" required>
    <option value="Speed">Speed</option>
    <option value="Stamina">Stamina</option>
    <option value="Gut">Gut</option>
    <option value="Wit">Wit</option>
    <option value="Power">Power</option>
  </select><br><br>

  <label for="star_amount">Star Amount:</label><br>
  <input type="number" id="star_amount" name="star_amount" min="1" max= "3" required><br><br>

  <button type="submit" class="btn">Add Spark</button>
  <a href="/sparks" class="btn btn-cancel">Cancel</a>
</form>
