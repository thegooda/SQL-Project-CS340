<h2>Edit Spark</h2>

<form action="/sparks/edit/{{spark.spark_id}}" method="POST">
  <label for="name">Spark Name:</label><br>
  <input type="text" id="spark_name" name="spark_name" value="{{spark.name}}" required><br><br>

  <label for="stat_boosted">Stat Boosted:</label><br>
  <select id="stat_boosted" name="stat_boosted" required>
    <option value="Speed" {{#if spark.boost_speed}}selected{{/if}}>Speed</option>
    <option value="Stamina" {{#if spark.boost_stamina}}selected{{/if}}>Stamina</option>
    <option value="Wit" {{#if spark.boost_wit}}selected{{/if}}>Wit</option>
    <option value="Strength" {{#if spark.boost_strength}}selected{{/if}}>Strength</option>
    <option value="Gut" {{#if spark.boost_gut}}selected{{/if}}>Gut</option>
  </select><br><br>

  <label for="star_amount">Star Amount:</label><br>
  <input type="number" id="star_amount" name="star_amount" value="{{spark.star_amount}}" min="1" max= "3" required><br><br>

  <button type="submit" class="btn">Save Changes</button>
  <a href="/sparks" class="btn btn-cancel">Cancel</a>
</form>
