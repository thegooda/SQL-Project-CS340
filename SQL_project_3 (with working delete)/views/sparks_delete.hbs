<h2>Delete Spark</h2>

<p>Are you sure you want to delete this spark?</p>

<!-- Spark Details Table -->
<table class="delete-table" border="1" cellpadding="8">
  <tr>
    <th>ID</th>
    <td>{{spark.spark_id}}</td>
  </tr>
  <tr>
    <th>Name</th>
    <td>{{spark.name}}</td>
  </tr>
  <tr>
    <th>Stat Boosted</th>
    <td>{{spark.stat_boosted}}</td>
  </tr>
  <tr>
    <th>Star Amount</th>
    <td>{{spark.star_amount}}</td>
  </tr>
</table>

<!-- Action Buttons -->
<br>
<form action="/sparks/delete/{{spark.spark_id}}" method="POST">
  <button type="submit" class="btn btn-delete">Confirm Delete</button>
  <a href="/sparks" class="btn btn-secondary">Cancel</a>
</form>