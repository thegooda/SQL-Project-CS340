<h2>Add New Race</h2>

<form action="/races/add" method="POST">
    <label for="race_name">Race Name:</label><br>
    <input type="text" id="race_name" name="race_name" required><br><br>

    <label for="surface_type">Surface:</label><br>
    <select id="surface_type" name="surface_type" required>
        <option value="Turf">Turf</option>
        <option value="Dirt">Dirt</option>
    </select><br><br>

    <label for="distance">Distance:</label><br>
    <select id="distance" name="distance" required>
        <option value="Short">Short</option>
        <option value="Medium">Medium</option>
        <option value="Mile">Mile</option>
        <option value="Long">Long</option>
    </select><br><br>
    
    <button type="submit" class="btn">Add Race</button>
    <a href="/races" class="btn btn-cancel">Cancel</a>
</form>
