<link rel="stylesheet" href="/style.css">

<h2>Sparks-Horses Matrix</h2>

<a href="/horses-sparks/add" class="btn">+ Add New Horse-Spark Relationship</a>

<table border="1" cellpadding="8">
  <thead>
    <tr>
      <th>Horse Spark ID</th>
      <th>Horse ID</th>
      <th>Spark ID</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each assignments}}
      <tr>
        <td>{{this.horse_spark_id}}</td>
        <td>{{this.horse_id}} - {{this.horse_name}}</td> <!-- ID - Name -->
        <td>{{this.spark_id}} - {{this.spark_name}}</td>  <!-- ID - Name -->
        <td>
          <a href="/horses-sparks/edit/{{this.horse_spark_id}}" class="btn btn-edit">Edit</a>
          <a> | </a>
          <a href="/horses-sparks/delete/{{this.horse_spark_id}}" class="btn btn-delete">Delete</a>
        </td>
    {{/each}}
  </tbody>
</table>
