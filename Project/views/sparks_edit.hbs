<h2>Edit Spark</h2>

<form action="/sparks/edit/{{spark.spark_id}}" method="POST">
  <label for="name">Spark Name:</label><br>
  <input type="text" id="name" name="name" value="{{spark.name}}" required><br><br>

  <label for="stat_boosted">Stat Boosted:</label><br>
  <select id="stat_boosted" name="stat_boosted" required>
    <option value="Speed" {{spark.speedSelected}}>Speed</option>
    <option value="Stamina" {{spark.staminaSelected}}>Stamina</option>
    <option value="Wit" {{spark.witSelected}}>Wit</option>
    <option value="Power" {{spark.powerSelected}}>Power</option>
  </select><br><br>

  <label for="star_amount">Star Amount:</label><br>
  <input type="number" id="star_amount" name="star_amount" value="{{spark.star_amount}}" min="1" required><br><br>

  <button type="submit" class="btn">Save Changes</button>
  <a href="/sparks" class="btn btn-cancel">Cancel</a>
</form>
