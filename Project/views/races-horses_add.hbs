<h2>Enter Horse in Race</h2>

<form action="/races-horses/add" method="POST">
  <label for="horse_id">Horse:</label><br>
  <select id="horse_id" name="horse_id" required>
    {{#each horses}}
      <option value="{{this.horse_id}}">{{this.name}}</option>
    {{/each}}
  </select><br><br>

  <label for="race_id">Race:</label><br>
  <select id="race_id" name="race_id" required>
    {{#each races}}
      <option value="{{this.race_id}}">{{this.name}}</option>
    {{/each}}
  </select><br><br>

  <button type="submit" class="btn">Add Entry</button>
  <a href="/races-horses" class="btn btn-cancel">Cancel</a>
</form>
