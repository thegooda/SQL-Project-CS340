<h2>Edit Race</h2>

<form action="/races/edit/{{race.id}}" method="POST" class="form-container">
    <div class="form-group">
        <label for="name">Race Name:</label><br>
        <input type="text" id="name" name="name" value="{{race.name}}" required>
    </div>

    <div class="form-group">
        <label for="surface">Surface:</label><br>
        <select id="surface" name="surface" required>
            <option value="Turf" {{race.surfaceTurfSelected}}>Turf</option>
            <option value="Dirt" {{race.surfaceDirtSelected}}>Dirt</option>
        </select>
    </div>

    <div class="form-group">
        <label for="distance">Distance:</label><br>
        <select id="distance" name="distance" required>
            <option value="Short" {{race.distanceShortSelected}}>Short</option>
            <option value="Medium" {{race.distanceMediumSelected}}>Medium</option>
            <option value="Mile" {{race.distanceMileSelected}}>Mile</option>
            <option value="Long" {{race.distanceLongSelected}}>Long</option>
        </select>
    </div>

    <button type="submit" class="btn">Save Changes</button>
    <a href="/races" class="btn btn-cancel">Cancel</a>
</form>

